{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "react/prop-types": "warn",
      "react/forbid-prop-types": 0,
      "react/no-access-state-in-setstate": "off",
      "react/jsx-filename-extension": [
          1,
          {
              "extensions": [
                  ".js",
                  "jsx"
              ]
          }
      ],
      "max-len": ["error", {"code": 80, "ignoreUrls": true}],
      "no-tabs": ["error", {"allowIndentationTabs": true}],
      "settings": {
        "react": {
            "version": "detect"
        }
    }
  }
}
